@page
@model RegisterModel
@{
    ViewData["Title"] = "Bem Vindo!";
}
@inject Infra.Repository.Helper.IProfessorRepository _repo
<br />
<h1 class="title">@ViewData["Title"]</h1>
<script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.4.1.min.js"></script>
<link href="~/css/register.css" rel="stylesheet" type="text/css" />
<div class="row">
    <div class="col-md-12">
        <form asp-route-returnUrl="@Model.ReturnUrl"
              method="post" enctype="multipart/form-data">
            <div class="form-group">
                <div id="output" style="font-size:3em;color:black;text-align:center;"></div>
                <div id="container">
                    <input type="text" id="input" value="">
                    <input type="password" id="inputPassword" value="">
                </div>
            </div>
            <div class="form-group row" style="display:none">
                <div class="col-sm-6">
                    <label asp-for="RoleName" col-sm-4 col-form-label">
                        <select asp-for="RoleName" class="form-control">
                            <option id="roleName">Aluno</option>
                        </select>
                    </label>
                </div>
            </div>
            <div class="form-group justify-content-center align-items-center row" id="professor" style="display:none">
                <div class="col-sm-4">
                    <label asp-for="ProfessorID" col-sm-4 col-form-label">
                        <span class="text-center">Selecione um professor de redes</span>
                        <select asp-for="ProfessorID" id="professorId" asp-items="@((new SelectList(Model._professores,"Id","UserName")))"
                         class="form-control">
                            <option value="Id" id="professorId">Selecione</option>
                        </select>
                    </label>
                </div>
            </div>
        </form>
    </div>
</div>
<br />
<br />

<div class="row">
    <button class="btn btn-success" type="button" onclick="start()" id="start" style="position:relative;left:45%;display:none;">Vamos</button>
    <button type="submit" class="btn btn-primary" id="finale" style="position:relative;left:45%;display:none" onclick="serializar()">Acessar</button>
    <button class="btn btn-success" onclick="bot()" id="registro" style="position:relative;left:45%;display:none;">Responder</button>
</div>


<script src="~/js/Registro/Register.js"></script>
<script>
    $('#start').delay(3000).show(0);
</script>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />


}
